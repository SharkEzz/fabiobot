{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "baseUrl": "./",
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ES2022"],
        "moduleDetection": "force",
        "strict": true,
        "verbatimModuleSyntax": true,
        "useUnknownInCatchVariables": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist"
    },
    "include": ["src"]
}
